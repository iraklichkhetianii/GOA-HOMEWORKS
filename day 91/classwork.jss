body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f4f4f9;
    color: #333;
}

header {
    background-color: #3a3a7b;
    color: white;
    padding: 1rem;
    text-align: center;
}

header nav {
    margin-top: 1rem;
}

header nav button {
    background-color: #5c5cb8;
    color: white;
    border: none;
    padding: 0.5rem 1rem;
    margin: 0 0.5rem;
    border-radius: 5px;
    cursor: pointer;
}

header nav button:hover {
    background-color: #333;
}